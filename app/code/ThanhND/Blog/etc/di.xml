<?xml version="1.0" encoding="UTF-8" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManger/etc/config.xsd">
    <!--di Post model-->
    <preference for="ThanhND\Blog\Api\Data\PostInterface" type="ThanhND\Blog\Model\Post"/>
    <!--define filter pool-->
    <virtualType name="BlogPostGridFilterPool" type="ThanhND\Blog\Model\Post">
        <arguments>
            <argument name="applies" xsi:type="array">
                <item name="regular" xsi:type="object">
                    Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter
                </item>
                <item name="fultext" xsi:type="object">
                    Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter
                </item>
            </argument>
        </arguments>
    </virtualType>
    <!--define grid data provider use filter pool-->
    <virtualType name="PostGridDataProvider"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">
                ThanhND\Blog\Model\ResourceModel\Post\Collection
            </argument>
            <argument name="filterPool" xsi:type="object" shared="false">BlogPostGridFilterPool</argument>
        </arguments>
    </virtualType>
    <!--define grid resource model-->
    <virtualType name="ThanhND\Blog\Model\ResourceModel\Post\Grid\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">thanhnd_blog_post</argument>
            <argument name="resourceModel" xsi:type="string">ThanhND\Blog\Model\ResourceModel\Post</argument>
        </arguments>
    </virtualType>
    <!--define grid data source use grid resource model-->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="blog_post_listing_data_source" xsi:type="string">
                    ThanhND\Blog\Model\ResourceModel\Post\Grid\Collection
                </item>
            </argument>
        </arguments>
    </type>
</config>